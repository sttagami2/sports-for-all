<div class="game-index">
  <h2>紅白戦新規作成</h2>

  <%= form_for @participation, url: "/events/:event_id/games/halfway" do |f| %>
  <table>
    <tr>
      <th>試合日</th>
      <td>2020/06/01</td>
    </tr>
    <tr>
      <th>参加メンバー</th>
      <td>
        <%= radio_button_tag :member_select, "all", checked: true %>
        <%= label_tag :member_select, "イベント参加メンバー全員"%>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= radio_button_tag :member_select, "select" %>
        <%= label_tag :member_select, "参加メンバーを選択"%>
        <tr><td><%= f.select :id, @participations.all.collect {|t| [t.user_id, t.id]}, {include_blank: "参加するメンバーを選択して下さい"}, {multiple: true, class: "mySelect2 form-control"} %></td></tr>
        <tr><td><%= f.collection_select(:id, @participations, :id, :id, {include_blank: "参加するメンバーを選択して下さい"}, {multiple: true, class: "mySelect2 form-control"}) %></td></tr>
      </td>
      
    </tr>
    <tr>
      <th></th>
      <td>
        <%= radio_button_tag :member_select, "select_team" %>
        <%= label_tag :member_select, "チームを自分で決める"%>
      </td>
    </tr>
  </table>
  <% end %>
</div>

