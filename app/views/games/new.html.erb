<div class="game-index">
  <h2>紅白戦新規作成</h2>

  <%= form_for @participation, url: halfway_event_games_path, html: {method: "GET"} do |f| %>
  <table>
    <tr>
      <th>試合日</th>
      <td>2020/06/01</td>
    </tr>
    <tr>
      <th>参加メンバー</th>
      <td>
        <%= radio_button_tag :member_select, "all", checked: true %>
        <%= label_tag :member_select, "イベント参加メンバー全員"%>
      </td>
    </tr>
    <tr>
      <th></th>
      <td>
        <%= radio_button_tag :member_select, "select" %>
        <%= label_tag :member_select, "参加メンバーを選択"%></br>
        <%= label_tag :id, "メンバー選択：" %>
        <%= f.select :id, @participations.all.collect{|t| [t.user.name, t.id]}, {multiple: true, include_blank: "参加するメンバーを選択して下さい", class: "mySelect2 form-control"} %>
      </td>
    </tr>

    <tr>
      <th></th>
      <td>
        <%= radio_button_tag :member_select, "select_team" %>
        <%= label_tag :member_select, "チームを自分で決める"%>
      </td>
    </tr>

    <tr>
      <th></th>
      <td>
        <%= label_tag :id, "チーム1：" %>
        <%= f.select :id, @participations.all.collect{|t| [t.user.name, t.id]}, {multiple: true, include_blank: "参加するメンバーを選択して下さい", class: "mySelect2 form-control"} %>
      </td>
    </tr>

    <tr>
      <th></th>
      <td>
        <%= label_tag :id, "チーム2：" %>
        <%= f.select :id, @participations.all.collect{|t| [t.user.name, t.id]}, {multiple: true, include_blank: "参加するメンバーを選択して下さい", class: "mySelect2 form-control"} %>
      </td>
    </tr>

  </table>
  <%= f.submit %>
  <% end %>
</div>

